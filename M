    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore-compat.js"></script>
    
    <!-- Ad Networks -->
    <script src="https://telegram.org/js/telegram-web-app.js?56"></script>
    <script src='//libtl.com/sdk.js' data-zone='10144322' data-sdk='show_10144322'></script>
    <script src="https://cdn.tgads.space/assets/js/adexium-widget.min.js"></script>
    <script src="https://sad.adsgram.ai/js/sad.min.js"></script>

    <script>
        // Wait for all scripts to load
        window.addEventListener('load', function() {
            initializeApp();
        });

        function initializeApp() {
            // Firebase Configuration
            const firebaseConfig = {
                apiKey: "AIzaSyCP5C8hrLslTxx8mJbxL0TdzAB8JQKTgyo",
                authDomain: "mojamx-34aa7.firebaseapp.com",
                projectId: "mojamx-34aa7",
                storageBucket: "mojamx-34aa7.firebasestorage.app",
                messagingSenderId: "761766234617",
                appId: "1:761766234617:web:488e84b00362389da29528",
                measurementId: "G-D61CNJ5D49"
            };

            // Initialize Firebase
            let db = null;
            try {
                if (typeof firebase !== 'undefined') {
                    firebase.initializeApp(firebaseConfig);
                    db = firebase.firestore();
                    console.log('Firebase initialized successfully');
                }
            } catch (error) {
                console.log('Firebase initialization error:', error);
            }

            // Initialize Ad Networks
            let adexiumWidget = null;
            let adsgramController = null;
            let currentAdNetwork = 0;
            const adNetworks = ['monetag', 'adexium', 'adsgram'];

            try {
                if (typeof AdexiumWidget !== 'undefined') {
                    adexiumWidget = new AdexiumWidget({
                        wid: 'c4540e3b-2bd7-467e-b818-4998a8cf339d',
                        adFormat: 'interstitial'
                    });
                    console.log('Adexium initialized');
                }
            } catch(e) { 
                console.log('Adexium not loaded'); 
            }

            try {
                if (window.Adsgram) {
                    adsgramController = window.Adsgram.init({ blockId: "int-16935" });
                    console.log('Adsgram initialized');
                }
            } catch(e) { 
                console.log('Adsgram not loaded'); 
            }

            // Game State
            const gameState = {
                board: ['', '', '', '', '', '', '', '', ''],
                currentPlayer: 'X',
                gameActive: true,
                diamonds: 0,
                gamesPlayed: 0,
                wins: 0,
                playStartTime: Date.now(),
                playTimeSeconds: 0,
                playTimeInterval: null,
                diamondTimerInterval: null,
                userId: 'user_' + Math.random().toString(36).substr(2, 9)
            };

            // Initialize Telegram User
            if (window.Telegram && window.Telegram.WebApp) {
                const tg = window.Telegram.WebApp;
                const user = tg.initDataUnsafe && tg.initDataUnsafe.user;
                if (user) {
                    gameState.userId = user.id.toString();
                    document.getElementById('username').textContent = user.username ? '@' + user.username : user.first_name;
                }
            }

            const winningConditions = [
                [0, 1, 2], [3, 4, 5], [6, 7, 8],
                [0, 3, 6], [1, 4, 7], [2, 5, 8],
                [0, 4, 8], [2, 4, 6]
            ];

            function makeMove(index) {
                if (gameState.board[index] !== '' || !gameState.gameActive || gameState.currentPlayer !== 'X') return;

                gameState.board[index] = 'X';
                updateBoard();
                
                if (checkWin('X')) {
                    endGame('You Win! ðŸŽ‰');
                    gameState.diamonds++;
                    gameState.wins++;
                    updateDisplay();
                    saveUserData();
                    return;
                }
                
                if (checkDraw()) {
                    endGame('Draw! ðŸ¤');
                    return;
                }

                gameState.currentPlayer = 'O';
                document.getElementById('gameStatus').textContent = 'AI Turn (O)';
                
                setTimeout(() => {
                    aiMove();
                }, 500);
            }

            function aiMove() {
                let availableMoves = [];
                for (let i = 0; i < 9; i++) {
                    if (gameState.board[i] === '') availableMoves.push(i);
                }

                if (availableMoves.length === 0) return;

                let move = availableMoves[Math.floor(Math.random() * availableMoves.length)];
                gameState.board[move] = 'O';
                updateBoard();

                if (checkWin('O')) {
                    endGame('AI Wins! ðŸ¤–');
                    return;
                }

                if (checkDraw()) {
                    endGame('Draw! ðŸ¤');
                    return;
                }

                gameState.currentPlayer = 'X';
                document.getElementById('gameStatus').textContent = 'Your Turn (X)';
            }

            function checkWin(player) {
                return winningConditions.some(condition => {
                    return condition.every(index => gameState.board[index] === player);
                });
            }

            function checkDraw() {
                return gameState.board.every(cell => cell !== '');
            }

            function endGame(message) {
                gameState.gameActive = false;
                document.getElementById('gameStatus').textContent = message;
                gameState.gamesPlayed++;
                saveUserData();
            }

            function updateBoard() {
                const cells = document.querySelectorAll('.cell');
                cells.forEach((cell, index) => {
                    cell.textContent = gameState.board[index];
                    cell.className = 'cell';
                    if (gameState.board[index] === 'X') cell.classList.add('x');
                    if (gameState.board[index] === 'O') cell.classList.add('o');
                    cell.disabled = gameState.board[index] !== '' || !gameState.gameActive;
                });
            }

            function newGame() {
                showAd();
                gameState.board = ['', '', '', '', '', '', '', '', ''];
                gameState.currentPlayer = 'X';
                gameState.gameActive = true;
                document.getElementById('gameStatus').textContent = 'Your Turn (X)';
                updateBoard();
            }

            function showAd() {
                const network = adNetworks[currentAdNetwork];
                console.log('Showing ad from:', network);

                try {
                    if (network === 'monetag' && typeof show_10144322 === 'function') {
                        show_10144322().then(() => {
                            console.log('Monetag ad shown');
                        }).catch(e => console.log('Monetag error:', e));
                    } else if (network === 'adexium' && adexiumWidget) {
                        adexiumWidget.show();
                    } else if (network === 'adsgram' && adsgramController) {
                        adsgramController.show().then(() => {
                            console.log('Adsgram ad shown');
                        }).catch(e => console.log('Adsgram error:', e));
                    }
                } catch (e) {
                    console.log('Ad error:', e);
                }

                currentAdNetwork = (currentAdNetwork + 1) % adNetworks.length;
            }

            function updateDisplay() {
                document.getElementById('diamondCount').textContent = gameState.diamonds;
                document.getElementById('totalGames').textContent = gameState.gamesPlayed;
                document.getElementById('totalWins').textContent = gameState.wins;
                document.getElementById('totalDiamonds').textContent = gameState.diamonds;
            }

            function startPlayTimer() {
                gameState.playTimeInterval = setInterval(() => {
                    gameState.playTimeSeconds++;
                    const minutes = Math.floor(gameState.playTimeSeconds / 60);
                    const seconds = gameState.playTimeSeconds % 60;
                    document.getElementById('playTimer').textContent = 
                        `Play Time: ${minutes}:${seconds.toString().padStart(2, '0')}`;
                    document.getElementById('totalPlayTime').textContent = minutes + 'm';
                }, 1000);
            }

            function startDiamondTimer() {
                gameState.diamondTimerInterval = setInterval(() => {
                    const floatingDiamond = document.getElementById('floatingDiamond');
                    floatingDiamond.style.display = 'block';
                    setTimeout(() => {
                        floatingDiamond.style.display = 'none';
                    }, 5000);
                }, 240000); // 4 minutes
            }

            function claimDiamond() {
                const floatingDiamond = document.getElementById('floatingDiamond');
                floatingDiamond.style.display = 'none';
                showAllAds();
            }

            function showAllAds() {
                setTimeout(() => {
                    if (typeof show_10144322 === 'function') {
                        show_10144322().catch(e => console.log(e));
                    }
                }, 500);

                setTimeout(() => {
                    if (adexiumWidget) adexiumWidget.show();
                }, 2000);

                setTimeout(() => {
                    if (adsgramController) {
                        adsgramController.show().then(() => {
                            gameState.diamonds++;
                            updateDisplay();
                            saveUserData();
                        }).catch(e => console.log(e));
                    } else {
                        gameState.diamonds++;
                        updateDisplay();
                        saveUserData();
                    }
                }, 4000);
            }

            function switchPage(pageId) {
                document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
                document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
                
                document.getElementById(pageId).classList.add('active');
                event.currentTarget.classList.add('active');
            }

            async function saveUserData() {
                if (!db) return;
                
                try {
                    await db.collection('users').doc(gameState.userId).set({
                        diamonds: gameState.diamonds,
                        gamesPlayed: gameState.gamesPlayed,
                        wins: gameState.wins,
                        playTimeSeconds: gameState.playTimeSeconds,
                        lastPlayed: firebase.firestore.FieldValue.serverTimestamp(),
                        telegramUsername: document.getElementById('username').textContent
                    }, { merge: true });
                    console.log('Data saved successfully');
                } catch (error) {
                    console.error('Error saving data:', error);
                }
            }

            async function loadUserData() {
                if (!db) return;
                
                try {
                    const doc = await db.collection('users').doc(gameState.userId).get();
                    if (doc.exists) {
                        const data = doc.data();
                        gameState.diamonds = data.diamonds || 0;
                        gameState.gamesPlayed = data.gamesPlayed || 0;
                        gameState.wins = data.wins || 0;
                        gameState.playTimeSeconds = data.playTimeSeconds || 0;
                        updateDisplay();
                        console.log('Data loaded successfully');
                    }
                } catch (error) {
                    console.error('Error loading data:', error);
                }
            }

            // Event Listeners
            document.querySelectorAll('.cell').forEach(cell => {
                cell.addEventListener('click', function() {
                    makeMove(parseInt(this.getAttribute('data-index')));
                });
            });

            document.getElementById('newGameBtn').addEventListener('click', newGame);

            document.getElementById('floatingDiamond').addEventListener('click', claimDiamond);

            document.querySelectorAll('.nav-item').forEach(item => {
                item.addEventListener('click', function() {
                    switchPage(this.getAttribute('data-page'));
                });
            });

            // Save data before leaving
            window.addEventListener('beforeunload', () => {
                saveUserData();
            });

            // Initialize game
            loadUserData();
            startPlayTimer();
            startDiamondTimer();
            updateDisplay();

            // Hide loading, show game
            document.getElementById('loading').style.display = 'none';
            document.getElementById('gameApp').style.display = 'block';

            console.log('Game initialized successfully!');
        }
    </script>
</body>
</html>

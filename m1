    <script>
        window.addEventListener('load', initializeApp);

        function initializeApp() {
            // Firebase Configuration
            const firebaseConfig = {
                apiKey: "AIzaSyCP5C8hrLslTxx8mJbxL0TdzAB8JQKTgyo",
                authDomain: "mojamx-34aa7.firebaseapp.com",
                projectId: "mojamx-34aa7",
                storageBucket: "mojamx-34aa7.firebasestorage.app",
                messagingSenderId: "761766234617",
                appId: "1:761766234617:web:488e84b00362389da29528",
                measurementId: "G-D61CNJ5D49"
            };

            let db = null;
            try {
                if (typeof firebase !== 'undefined') {
                    firebase.initializeApp(firebaseConfig);
                    db = firebase.firestore();
                    console.log('‚úÖ Firebase initialized');
                }
            } catch (error) {
                console.log('Firebase error:', error);
            }

            // Initialize Ad Networks
            let adexiumWidget = null;
            let adsgramController = null;
            
            try {
                if (typeof AdexiumWidget !== 'undefined') {
                    adexiumWidget = new AdexiumWidget({
                        wid: 'c4540e3b-2bd7-467e-b818-4998a8cf339d',
                        adFormat: 'interstitial'
                    });
                    console.log('‚úÖ Adexium initialized');
                }
            } catch(e) { console.log('Adexium not loaded'); }

            try {
                if (window.Adsgram) {
                    adsgramController = window.Adsgram.init({ blockId: "int-16935" });
                    console.log('‚úÖ Adsgram initialized');
                }
            } catch(e) { console.log('Adsgram not loaded'); }

            // ‚≠ê‚≠ê‚≠ê ‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶§‡ßã‡¶Æ‡¶æ‡¶∞ TASKS ‡¶≤‡¶ø‡¶ñ‡¶¨‡ßá ‚≠ê‚≠ê‚≠ê
            const defaultTasks = [
                {
                    id: 'task_youtube_1',
                    title: 'Join Our YouTube Channel',
                    description: 'Subscribe and get 10 diamonds',
                    type: 'youtube',
                    link: 'https://youtube.com/@yourchannel',
                    reward: 10
                },
                {
                    id: 'task_telegram_1',
                    title: 'Join Telegram Group',
                    description: 'Join our community and get 15 diamonds',
                    type: 'telegram',
                    link: 'https://t.me/yourchannel',
                    reward: 15
                },
                {
                    id: 'task_website_1',
                    title: 'Visit Our Website',
                    description: 'Check out our website and get 5 diamonds',
                    type: 'website',
                    link: 'https://yourwebsite.com',
                    reward: 5
                }
                // ‚¨áÔ∏è ‡¶®‡¶§‡ßÅ‡¶® task ‡¶è‡¶ñ‡¶æ‡¶®‡ßá add ‡¶ï‡¶∞‡ßã ‡¶è‡¶≠‡¶æ‡¶¨‡ßá:
                // ,{
                //     id: 'task_unique_id',  // ‚ö†Ô∏è ‡¶™‡ßç‡¶∞‡¶§‡¶ø‡¶ü‡¶æ task ‡¶è‡¶∞ ‡¶Ü‡¶≤‡¶æ‡¶¶‡¶æ ID ‡¶¶‡¶ø‡¶§‡ßá ‡¶π‡¶¨‡ßá
                //     title: 'Your Task Title',
                //     description: 'Task description here',
                //     type: 'youtube',  // youtube / telegram / website / other
                //     link: 'https://your-link-here.com',
                //     reward: 20  // ‡¶ï‡¶§ diamond ‡¶¶‡¶ø‡¶¨‡ßá
                // }
            ];

            // Game State
            const gameState = {
                board: ['', '', '', '', '', '', '', '', ''],
                currentPlayer: 'X',
                gameActive: true,
                diamonds: 0,
                gamesPlayed: 0,
                wins: 0,
                playStartTime: Date.now(),
                playTimeSeconds: 0,
                playTimeInterval: null,
                diamondTimerInterval: null,
                userId: 'user_' + Math.random().toString(36).substr(2, 9),
                currentAdNetwork: 0,
                gamesUntilAd: 3,
                tasks: defaultTasks,
                completedTasks: []
            };

            const adNetworks = ['monetag', 'adexium', 'adsgram'];

            // Initialize Telegram User
            if (window.Telegram && window.Telegram.WebApp) {
                const tg = window.Telegram.WebApp;
                const user = tg.initDataUnsafe && tg.initDataUnsafe.user;
                if (user) {
                    gameState.userId = user.id.toString();
                    document.getElementById('username').textContent = user.username ? '@' + user.username : user.first_name;
                }
            }

            const winningConditions = [
                [0, 1, 2], [3, 4, 5], [6, 7, 8],
                [0, 3, 6], [1, 4, 7], [2, 5, 8],
                [0, 4, 8], [2, 4, 6]
            ];

            function makeMove(index) {
                if (gameState.board[index] !== '' || !gameState.gameActive || gameState.currentPlayer !== 'X') return;

                gameState.board[index] = 'X';
                updateBoard();
                
                if (checkWin('X')) {
                    endGame('You Win! üéâ');
                    gameState.diamonds++;
                    gameState.wins++;
                    updateDisplay();
                    saveUserData();
                    return;
                }
                
                if (checkDraw()) {
                    endGame('Draw! ü§ù');
                    return;
                }

                gameState.currentPlayer = 'O';
                document.getElementById('gameStatus').textContent = 'AI Turn (O)';
                
                setTimeout(aiMove, 500);
            }

            function aiMove() {
                let availableMoves = [];
                for (let i = 0; i < 9; i++) {
                    if (gameState.board[i] === '') availableMoves.push(i);
                }

                if (availableMoves.length === 0) return;

                let move = availableMoves[Math.floor(Math.random() * availableMoves.length)];
                gameState.board[move] = 'O';
                updateBoard();

                if (checkWin('O')) {
                    endGame('AI Wins! ü§ñ');
                    return;
                }

                if (checkDraw()) {
                    endGame('Draw! ü§ù');
                    return;
                }

                gameState.currentPlayer = 'X';
                document.getElementById('gameStatus').textContent = 'Your Turn (X)';
            }

            function checkWin(player) {
                return winningConditions.some(condition => {
                    return condition.every(index => gameState.board[index] === player);
                });
            }

            function checkDraw() {
                return gameState.board.every(cell => cell !== '');
            }

            function endGame(message) {
                gameState.gameActive = false;
                document.getElementById('gameStatus').textContent = message;
                gameState.gamesPlayed++;
                saveUserData();
            }

            function updateBoard() {
                const cells = document.querySelectorAll('.cell');
                cells.forEach((cell, index) => {
                    cell.textContent = gameState.board[index];
                    cell.className = 'cell';
                    if (gameState.board[index] === 'X') cell.classList.add('x');
                    if (gameState.board[index] === 'O') cell.classList.add('o');
                    cell.disabled = gameState.board[index] !== '' || !gameState.gameActive;
                });
            }

            function newGame() {
                gameState.gamesUntilAd--;
                updateGameCounter();

                if (gameState.gamesUntilAd <= 0) {
                    showAd();
                    gameState.gamesUntilAd = 3;
                }

                gameState.board = ['', '', '', '', '', '', '', '', ''];
                gameState.currentPlayer = 'X';
                gameState.gameActive = true;
                document.getElementById('gameStatus').textContent = 'Your Turn (X)';
                updateBoard();
            }

            function updateGameCounter() {
                document.getElementById('gameCounter').textContent = 
                    `Games until next ad: ${gameState.gamesUntilAd}`;
            }

            function showAd() {
                const network = adNetworks[gameState.currentAdNetwork];
                console.log('üé¨ Showing ad from:', network);

                try {
                    if (network === 'monetag' && typeof show_10144322 === 'function') {
                        show_10144322().then(() => {
                            console.log('‚úÖ Monetag ad shown');
                        }).catch(e => console.log('Monetag error:', e));
                    } else if (network === 'adexium' && adexiumWidget) {
                        adexiumWidget.show();
                        console.log('‚úÖ Adexium ad shown');
                    } else if (network === 'adsgram' && adsgramController) {
                        adsgramController.show().then(() => {
                            console.log('‚úÖ Adsgram ad shown');
                        }).catch(e => console.log('Adsgram error:', e));
                    }
                } catch (e) {
                    console.log('Ad error:', e);
                }

                gameState.currentAdNetwork = (gameState.currentAdNetwork + 1) % adNetworks.length;
            }

            function updateDisplay() {
                document.getElementById('diamondCount').textContent = gameState.diamonds;
                document.getElementById('totalGames').textContent = gameState.gamesPlayed;
                document.getElementById('totalWins').textContent = gameState.wins;
                document.getElementById('totalDiamonds').textContent = gameState.diamonds;
            }

            function startPlayTimer() {
                gameState.playTimeInterval = setInterval(() => {
                    gameState.playTimeSeconds++;
                    const minutes = Math.floor(gameState.playTimeSeconds / 60);
                    const seconds = gameState.playTimeSeconds % 60;
                    document.getElementById('playTimer').textContent = 
                        `Play Time: ${minutes}:${seconds.toString().padStart(2, '0')}`;
                    document.getElementById('totalPlayTime').textContent = minutes + 'm';
                }, 1000);
            }

            function startDiamondTimer() {
                gameState.diamondTimerInterval = setInterval(() => {
                    const floatingDiamond = document.getElementById('floatingDiamond');
                    floatingDiamond.style.display = 'block';
                    setTimeout(() => {
                        floatingDiamond.style.display = 'none';
                    }, 10000);
                }, 240000);
            }

            window.claimDiamond = function() {
                const floatingDiamond = document.getElementById('floatingDiamond');
                floatingDiamond.style.display = 'none';
                showAllAds();
            }

            function showAllAds() {
                let adCount = 0;
                
                setTimeout(() => {
                    if (typeof show_10144322 === 'function') {
                        show_10144322().then(() => {
                            console.log('‚úÖ Monetag ad 1 shown');
                            adCount++;
                        }).catch(e => {
                            console.log('Monetag error:', e);
                            adCount++;
                        });
                    } else adCount++;
                }, 500);

                setTimeout(() => {
                    if (adexiumWidget) {
                        adexiumWidget.show();
                        console.log('‚úÖ Adexium ad 2 shown');
                    }
                    adCount++;
                }, 3000);

                setTimeout(() => {
                    if (adsgramController) {
                        adsgramController.show().then(() => {
                            console.log('‚úÖ Adsgram ad 3 shown');
                            gameState.diamonds++;
                            updateDisplay();
                            saveUserData();
                        }).catch(e => {
                            console.log('Adsgram error:', e);
                            gameState.diamonds++;
                            updateDisplay();
                            saveUserData();
                        });
                    } else {
                        gameState.diamonds++;
                        updateDisplay();
                        saveUserData();
                    }
                }, 6000);
            }

            window.switchPage = function(pageId, element) {
                document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
                document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
                
                document.getElementById(pageId).classList.add('active');
                if (element) element.classList.add('active');
            }

            function renderTasks() {
                const tasksList = document.getElementById('tasksList');
                
                if (gameState.tasks.length === 0) {
                    tasksList.innerHTML = '<p style="text-align: center; color: #666;">No tasks available</p>';
                    return;
                }

                tasksList.innerHTML = gameState.tasks.map(task => {
                    const isCompleted = gameState.completedTasks.includes(task.id);
                    const typeEmoji = {
                        youtube: 'üì∫',
                        telegram: '‚úàÔ∏è',
                        website: 'üåê',
                        other: 'üîó'
                    };

                    return `
                        <div class="task-item">
                            <div class="task-header">
                                <div class="task-title">${typeEmoji[task.type] || 'üîó'} ${task.title}</div>
                                <div class="task-reward">üíé ${task.reward}</div>
                            </div>
                            <div class="task-description">${task.description}</div>
                            <a href="${task.link}" class="task-link" target="_blank">${task.link}</a>
                            <div class="task-actions">
                                <button class="task-btn visit-btn" onclick="visitTask('${task.id}', '${task.link}')">
                                    Visit ${task.type === 'youtube' ? 'Video' : task.type === 'telegram' ? 'Channel' : 'Link'}
                                </button>
                                ${isCompleted ? 
                                    '<button class="task-btn claimed-btn" disabled>‚úÖ Claimed</button>' :
                                    `<button class="task-btn claim-btn" onclick="claimTask('${task.id}', ${task.reward})">Claim Reward</button>`
                                }
                            </div>
                        </div>
                    `;
                }).join('');
            }

            window.visitTask = function(taskId, link) {
                window.open(link, '_blank');
            }

            window.claimTask = function(taskId, reward) {
                if (gameState.completedTasks.includes(taskId)) {
                    alert('‚ö†Ô∏è You have already claimed this task!');
                    return;
                }

                gameState.completedTasks.push(taskId);
                gameState.diamonds += reward;
                updateDisplay();
                saveUserData();
                renderTasks();
                alert(`üéâ Congratulations! You earned ${reward} diamonds!`);
            }

            async function saveUserData() {
                if (!db) return;
                
                try {
                    await db.collection('users').doc(gameState.userId).set({
                        diamonds: gameState.diamonds,
                        gamesPlayed: gameState.gamesPlayed,
                        wins: gameState.wins,
                        playTimeSeconds: gameState.playTimeSeconds,
                        completedTasks: gameState.completedTasks,
                        lastPlayed: firebase.firestore.FieldValue.serverTimestamp(),
                        telegramUsername: document.getElementById('username').textContent
                    }, { merge: true });
                    console.log('‚úÖ User data saved');
                } catch (error) {
                    console.error('Error saving data:', error);
                }
            }

            async function loadUserData() {
                if (!db) return;
                
                try {
                    const doc = await db.collection('users').doc(gameState.userId).get();
                    if (doc.exists) {
                        const data = doc.data();
                        gameState.diamonds = data.diamonds || 0;
                        gameState.gamesPlayed = data.gamesPlayed || 0;
                        gameState.wins = data.wins || 0;
                        gameState.playTimeSeconds = data.playTimeSeconds || 0;
                        gameState.completedTasks = data.completedTasks || [];
                        updateDisplay();
                        console.log('‚úÖ User data loaded');
                    }
                } catch (error) {
                    console.error('Error loading data:', error);
                }
            }

            // Event Listeners
            document.querySelectorAll('.cell').forEach(cell => {
                cell.addEventListener('click', function() {
                    makeMove(parseInt(this.getAttribute('data-index')));
                });
            });

            document.getElementById('newGameBtn').addEventListener('click', newGame);

            // Save data before leaving
            window.addEventListener('beforeunload', () => {
                saveUserData();
            });

            // Auto-save every 30 seconds
            setInterval(() => {
                saveUserData();
            }, 30000);

            // Initialize game
            async function init() {
                await loadUserData();
                startPlayTimer();
                startDiamondTimer();
                updateDisplay();
                updateGameCounter();
                renderTasks();

                // Hide loading, show game
                document.getElementById('loading').style.display = 'none';
                document.getElementById('gameApp').style.display = 'block';

                console.log('üéÆ Game initialized successfully!');
            }

            init();
        }
    </script>
</body>
</html>
